@model IEnumerable<ProyectoFinal_EstDatos.Clases.Paciente>
@using ProyectoFinal_EstDatos.Clases;
@{
    ViewData["Title"] = "PacientesSospechosos";
}
    <body>
        <header class="PacientesSospechos">
            <div class="textos">
                <h1 class="titulo">Pacientes Sospechosos</h1>
                <h3 class="subtitulo">@ViewBag.NombreHospital</h3>
            </div>
            <div class="sesgoabajo"></div>
        </header>
        <div class="container">
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellido)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Edad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DPI)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Departamento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Municipio)
                        </th>
                        <th style="width:auto">
                            Síntomas
                        </th>
                        <th style="width:auto">
                            Descripción
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Paciente item in ViewBag.Sospechosos)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellido)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Edad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DPI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Departamento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Municipio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sintomas)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @if (ViewBag.Regresar)
            {
                <div>
                    <a class="btn btn-outline-info" asp-action="Index">Regresar</a>
                </div>
            }
            else
            {
                <div>
                    <a class="btn btn-outline-info" asp-action="MostrarHospital">Regresar</a>
                </div>
            }
            <p>

            </p>
            <center>
                <div>
                    <a class="btn btn-outline-warning" asp-action="RealizarPrueba">Realizar Una Prueba</a>
                    <hr />
                    <a asp-action="IngresarPaciente" class="btn btn-outline-dark btn-lg btn-block" role="button">Ingresar Paciente</a>

                </div>
            </center>
        </div>
    </body>